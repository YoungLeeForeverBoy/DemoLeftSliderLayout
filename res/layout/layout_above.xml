<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical"
    android:background="@android:color/white" >
    <Button android:id="@+id/enable_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="enable button"
        android:onClick="onClick"/>
    <Button android:id="@+id/disable_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="disable button"
        android:onClick="onClick"/>
    <Button android:id="@+id/open_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="open button"
        android:onClick="onClick"
        android:visibility="invisible"/>
    <Button android:id="@+id/close_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="close button"
        android:onClick="onClick"
        android:visibility="invisible"/>

    <HorizontalScrollView android:id="@+id/horizontal_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:src="@drawable/meizi1"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:src="@drawable/meizi2"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:src="@drawable/meizi3"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:src="@drawable/meizi4"/>
        </LinearLayout>
    </HorizontalScrollView>
</LinearLayout>
