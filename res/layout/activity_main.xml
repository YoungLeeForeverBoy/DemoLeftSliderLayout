<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >
    <include android:id="@+id/layout_below"
        layout="@layout/layout_below"/>

    <com.example.demoleftsliderlayout.LeftSliderLayout
        android:id="@+id/main_slider_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView android:layout_width="10dp"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/main_side_shadow"/>

        <include android:id="@+id/layout_above"
            layout="@layout/layout_above"/>
    </com.example.demoleftsliderlayout.LeftSliderLayout>
</FrameLayout>
